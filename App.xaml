            <SolidColorBrush x:Key="IssueArchivedBrush"
                             Color="#FF888888" />

            <SolidColorBrush x:Key="IssueOpenBrush"
                             Color="#FFF17830" />

            <SolidColorBrush x:Key="IssueClosedBrush"
                             Color="#FF3495c9" />

            <SolidColorBrush x:Key="IssueAssignedBrush"
