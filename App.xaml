            <converters:StringCaseConverter x:Key="StringCaseConverter" />
            <converters:NewCommentTitleConverter x:Key="NewCommentTitleConverter" />
            <converters:IssueCloseReopenTitleConverter x:Key="IssueCloseReopenTitleConverter" />
            <converters:ShareServiceIconConverter x:Key="ShareServiceIconConverter" />
            <converters:UserProfileStatsNavigateUriConverter x:Key="UserProfileStatsNavigateUriConverter" />
            <converters:ObjectToBoolConverter x:Key="ObjectToBoolConverter" />
            <converters:ConditionalIntVisibilityConverter x:Key="ConditionalIntVisibilityConverter" />
            <converters:SelectRequestTypeItemVisibilityConverter x:Key="SelectRequestTypeItemVisibilityConverter" />
            <converters:IssueImageConverter x:Key="IssueImageConverter" />
